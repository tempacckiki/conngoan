    <version>1.0</version>

    <params>   
        <param name="catid" type="text" default="" label="ID Chủ đề con" description="Nhập ID cách nhau bằng dấu ," />
        <param name="max" type="text" default="10" label="Tổng số tin" description="" />         
        <param name="max_show" type="text" default="5" label="Số tin hiển thị" description="" />         
        <param name="string_length" type="text" default="50" label="Số ký tự" description="Số ký tự tối đa của tiêu đề" />         
        <param name="show_img" type="list" default="0" label="Hiện ảnh đại diện" description="Cho phép hiển thị hình ảnh hay không">               <option value="1">Có</option>
            <option value="0">Không</option>        
        </param>
        <param name="width_img" type="text" default="40px" label="Chiều rộng ảnh" description="Ví dụ: 40px" />
        <param name="height_img" type="text" default="40px" label="Chiều cao ảnh" description="Ví dụ: 40px" />
        <param name="speed" type="text" default="1500" label="Tốc độ chạy tin" description="" />
    </params>
</install>